<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MFR15MainActivityFragment">



    <android.opengl.GLSurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glSurfaceView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/log"
        android:layout_alignParentTop="true"
        android:textColor="#aaaaaa"/>

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/node1"
        android:layout_marginStart="87dp"
        android:src="@drawable/don"
        android:layout_alignTop="@+id/log"
        android:layout_alignParentStart="true">
    </ImageView>

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/node2"
        android:src="@drawable/mic"
        android:layout_alignTop="@+id/log"
        android:layout_alignEnd="@+id/log"
        android:layout_marginEnd="133dp"
        android:layout_marginTop="56dp">
    </ImageView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donatello"
        android:id="@+id/node1TextView"
        android:layout_below="@+id/node1"
        android:layout_alignStart="@+id/node1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michelangelo"
        android:id="@+id/node2TextView"
        android:layout_below="@+id/node2"
        android:layout_alignStart="@+id/node2" />

</RelativeLayout>
